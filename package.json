{
  "name": "vim-chrome",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:melonmanchan/vim-chrome.git",
  "author": "Matti Jokitulppo <melonmanchan@gmail.com>",
  "license": "MIT",
  "scripts": {
    "move-deps": "mkdir -p dist && cp -r src/vim dist/vim",
    "build": "parcel build src/vim.html && npm run move-deps",
    "start:dev": "npm run move-deps && concurrently 'tsc -w --noEmit' 'parcel src/vim.html'",
    "lint": "eslint src/**/*.ts"
  },
  "devDependencies": {
    "concurrently": "^4.1.2",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "http-server": "^0.11.1",
    "prettier": "^1.18.2",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@types/node": "^12.7.5",
    "vim-wasm": "^0.0.12"
  }
}
